<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_FILE">/logs/application.log</Property>
    </Properties>

    <!-- ✅ Console Appender (Human-Readable Logs) -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
        </Console>

        <!-- ✅ Rolling File Appender (Corrected JSON Output) -->
        <RollingFile name="File" fileName="${LOG_FILE}" filePattern="logs/application-%d{yyyy-MM-dd}.log">
            <JsonLayout complete="true" compact="false"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
    </Appenders>

    <!-- ✅ Correct Loggers -->
    <Loggers>
        <Logger name="com.bazarbozorg" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.springframework" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.hibernate.SQL" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <AsyncRoot level="INFO">
            <AppenderRef ref="File"/>
        </AsyncRoot>
    </Loggers>
</Configuration>
